@model kutuphaneWeb_24_02_24.Models.kitaplar
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Guncelle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/App_Start/Style/Kitaplar/kitaplarGuncelle.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Kitap Güncelleme Formu</h2>
        <form method="post" action="/Kitaplar/Guncelle/">
            <input type="hidden" name="id" value="@Model.id" />
            <div class="mb-3">
                <label for="kitapAdi" class="form-label">Kitap Adı</label>
                <input type="text" class="form-control" name="kitapAd" value="@Model.kitapAd">
            </div>
            <div class="mb-3">
                <label for="kitapYazari" class="form-label">Kitap Yazarı</label>
                <input type="text" class="form-control" name="kitapYazar" value="@Model.kitapYazar">
            </div>
            <div class="mb-3">
                <label for="sayfaSayisi" class="form-label">Sayfa Sayısı</label>
                <input type="number" class="form-control" name="sayfaSayisi" value="@Model.sayfaSayisi">
            </div>

            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</body>
</html>
