
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>KitapDetay</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/App_Start/Style/Kitaplar/KitapDetay.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2 class="text-center">Kitap Detayı</h2>
        <div class="mt-4">
            <p class="mb-1">Kitap: <strong>@ViewBag.Ad</strong></p>
            @if (Convert.ToInt32(ViewBag.KalanGun) > 0)
            {
                <p class="mb-4">Kalan Gün: <strong>@ViewBag.KalanGun</strong></p>
                <button class="btn btn-custom btn-block" disabled>Kitabı İste</button>
            }
            else
            {
                <p class="mb-4">Geciken Gün: <strong> @Math.Abs(Convert.ToInt32(@ViewBag.KalanGun))</strong></p>

                <a href="/Kitaplar/KitapIste/@ViewBag.id" class="btn btn-custom btn-block">Kitabı İste</a>
            }
        </div>
    </div>
