@model List<kutuphaneWeb_24_02_24.Models.kitaplar>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @*<link href="~/App_Start/Style/Kitaplar/KitapIndex.css" rel="stylesheet" />*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kitap Adı</th>
                    <th>Kitap Yazarı</th>
                    <th>Sayfa Sayısı</th>
                    <th>Ödünç Durumu</th>
                    <th>SİL</th>
                    <th>GÜNCELLE</th>
                    <th>Detay</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kitap in Model.Where(p => p.aktiflik == true))
                {
                    <tr>
                        <td>@kitap.id</td>
                        <td>@kitap.kitapAd</td>
                        <td>@kitap.kitapYazar</td>
                        <td>@kitap.sayfaSayisi</td>
                        @if (kitap.oduncDurum == true)
                        {
                            <td style="color:green;">Rafta</td>
                        }
                        else
                        {
                            <td style="color:red;">Kullanıcıda</td>
                        }
                        <td><a href="/Kitaplar/Sil/@kitap.id" class="btn btn-danger">SİL</a></td>
                        <td><a href="/Kitaplar/Guncelle/@kitap.id" class="btn btn-success">Güncelle</a></td>
                        @if (kitap.oduncDurum == false)
                        {
                            <td><a href="/Kitaplar/KitapDetay/@kitap.id"  class="btn btn-primary">Detay</a></td>
                        }
                        else
                        {
                            <td><a href="#" style="pointer-events:none; background-color:lightblue" class="btn btn-primary">Detay</a></td>

                        }
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center mt-3">
            <a href="/Kitaplar/Ekle" class="btn btn-primary">Yeni Kitap Ekle</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
