
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ekle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Kitap Ekleme Formu</h2>
        <form method="post"action="/Kitaplar/Ekle">
            <div class="mb-3">
                <label for="kitapAdi" class="form-label">Kitap Adı</label>
                <input type="text" class="form-control" id="kitapAdi" name="kitapAd">
            </div>
            <div class="mb-3">
                <label for="kitapYazari" class="form-label">Kitap Yazarı</label>
                <input type="text" class="form-control" id="kitapYazari" name="kitapYazar">
            </div>
            <div class="mb-3">
                <label for="sayfaSayisi" class="form-label">Sayfa Sayısı</label>
                <input type="number" class="form-control" id="sayfaSayisi" name="sayfaSayisi">
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="aktiflik" name="aktiflik">
                <label class="form-check-label" for="aktiflik">Aktiflik Durumu</label>
            </div>
            <button type="submit" class="btn btn-primary">Kitap Ekle</button>
        </form>
    </div>
</body>
</html>
