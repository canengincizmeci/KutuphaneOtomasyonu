@model List<kutuphaneWeb_24_02_24.Models.uyeler>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Üye Listesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Üye Listesi</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad Soyad</th>
                    <th>Kitap Sayısı</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>İletişim</th>                
                </tr>
            </thead>
            <tbody>
                @foreach (var uye in Model.Where(p => p.aktiflik == true))
                {
                    <tr>
                        <td>@uye.id</td>
                        <td>@uye.adSoyad</td>
                        <td>@uye.kitapSayisi</td>
                        <td><a href="/Uyeler/Sil/@uye.id" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Uyeler/Guncelle/@uye.id" class="btn btn-success">Güncelle</a></td>
                        <td><a href="/Uyeler/Mesaj/@uye.id" class="btn btn-warning">İletişim</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center mt-3">
            <a href="/Uyeler/Ekle" class="btn btn-primary">Yeni Üye Ekle</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
