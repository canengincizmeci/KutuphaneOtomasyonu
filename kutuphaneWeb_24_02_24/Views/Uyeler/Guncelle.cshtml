@model kutuphaneWeb_24_02_24.Models.uyeler
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Guncelle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Üye Güncelleme Formu</h2>
        <form method="post" action="/Uyeler/Guncelle/">
            <input type="hidden" name="id" value="@Model.id" />
            <div class="mb-3">
                <label for="kitapAdi" class="form-label">Üye Adı</label>
                <input type="text" class="form-control" name="adSoyad" value="@Model.adSoyad">
            </div>
            <div class="mb-3">
                <label for="kitapYazari" class="form-label">Kitap Sayısı</label>
                <input type="text" class="form-control" name="kitapSayisi" value="@Model.kitapSayisi">
            </div>
            <div class="mb-3">
                <label for="sayfaSayisi" class="form-label">Mail</label>
                <input type="text" class="form-control" name="mail" value="@Model.mail">
            </div>

            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</body>
</html>